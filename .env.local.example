# Local Development Environment Configuration Example
# Copy this file to .env.local and modify as needed

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=martaz
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=local_development_secret_key
JWT_EXPIRES_IN=1d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Image Server
IMAGE_SERVER_URL=http://localhost:3001
CUSTOM_UPLOADS_DIR=./tmp

# Email Configuration (for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=local
SMTP_PASS=local
MAIL_FROM=noreply@martaz.local

# Debugging
DEBUG=true
LOG_LEVEL=debug 